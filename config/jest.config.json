{
  "collectCoverageFrom": ["<rootDir>/packages/**/src/**/*.js"],
  "testMatch": ["<rootDir>/packages/**/__test__/**/*.js"],
  "testEnvironment": "node",
  "testURL": "http://localhost",
  "transform": {
    "^.+\\.js$": "babel-jest",
    "^.+\\.ts$": "ts-jest"
  },
  "moduleNameMapper": {
    "^src(.*)$": "<rootDir>/src$1"
  },
  "moduleFileExtensions": ["js", "json"],
  "coverageThreshold": {
    "global": {
      "branches": 90,
      "functions": 90,
      "lines": 90,
      "statements": 90
    }
  }
}
