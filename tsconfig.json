{
  "compilerOptions": {
    "outDir": "lib",
    "module": "commonjs",
    "target": "es6",
    "lib": ["es2017"],
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true
  },
  "exclude": ["config", "coverage", "docs", "lib", "node_modules", "test"],
  "types": ["typePatches"]
}
